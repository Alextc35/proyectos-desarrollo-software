<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="<%= darkMode ? 'bg-dark text-light' : 'bg-light text-dark' %> d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/tasks">ToDoList</a>
      <div>
        <% if (user) { %>
          <span class="navbar-text me-3">ðŸ‘¤ <%= user.username %></span>
          <a class="btn btn-sm btn-outline-light" href="/auth/logout">Cerrar sesiÃ³n</a>
        <% } else { %>
          <a class="btn btn-sm btn-outline-light me-2" href="/auth/login">Login</a>
          <a class="btn btn-sm btn-outline-light" href="/auth/register">Registro</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-4">
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
  </div>

  <!-- Contenido -->
  <main class="container py-4 flex-grow-1">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 bg-dark text-light">
