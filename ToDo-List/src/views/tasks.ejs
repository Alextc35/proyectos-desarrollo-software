<% title = "Mis Tareas" %>

<h1 class="mb-4">Hola <%= username %>, estas son tus tareas</h1>

<ul class="list-group mb-4">
  <% tasks.forEach(task => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>
        <%= task.completed ? '✅' : '⬜' %> <%= task.title %>
      </span>
      <div>
        <% if (!task.completed) { %>
          <form action="/tasks/complete/<%= task._id %>" method="POST" class="d-inline">
            <button class="btn btn-success btn-sm">Completar</button>
          </form>
        <% } %>
        <form action="/tasks/delete/<%= task._id %>" method="POST" class="d-inline">
          <button class="btn btn-danger btn-sm">Eliminar</button>
        </form>
      </div>
    </li>
  <% }) %>
</ul>

<h2 class="mb-3">Agregar nueva tarea</h2>
<form action="/tasks/add" method="POST" class="d-flex gap-2">
  <input type="text" name="title" class="form-control" placeholder="Título de la tarea" required>
  <button class="btn btn-primary">Agregar</button>
</form>